{
  "name": "@nodots-llc/gnubg-hints",
  "version": "1.0.0",
  "description": "GNU Backgammon hint engine for Node.js with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gnubg-hints-cli": "dist/cli.js"
  },
  "scripts": {
    "configure": "node-gyp configure",
    "build:native": "node-gyp build",
    "build:ts": "tsc",
    "build": "npm run build:native && npm run build:ts",
    "rebuild": "node-gyp rebuild && npm run build:ts",
    "test": "jest",
    "test:coverage": "jest --coverage --verbose",
    "install": "node-gyp rebuild",
    "publish:npm": "npm publish --access public",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build:native"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@nodots-llc/backgammon-types": "^4.0.1",
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "node-gyp": "^10.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "gypfile": true,
  "keywords": [
    "backgammon",
    "gnubg",
    "hints",
    "ai",
    "native",
    "addon",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0"
}